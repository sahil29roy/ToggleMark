{
    "manifest_version": 2,
    "name": "ToggleMark",
    "version": "1.0.0",
    "description": "One-click to add or remove bookmarks from your toolbar.",
    "permissions": [
        "bookmarks",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/unbookmarked.png",
        "default_title": "Toggle Bookmark"
    },
    "icons": {
        "48": "icons/unbookmarked.png",
        "96": "icons/unbookmarked.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "togglemark@addon"
        }
    }
}